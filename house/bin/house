  ['priest all shaven and shorn','married'],
  ['man all tattered and torn','kissed'],
  ['maiden all forlorn','milked'],
  ['cow with the crumpled horn','tossed'],
  ['dog','worried'],
  ['cat','killed'],
  ['rat','ate'],
  ['malt','lay in'],
